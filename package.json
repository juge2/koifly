{
  "name": "minimal-hapi-react-webpack-hmr-sandbox",
  "version": "2.0.1",
  "description": "Minimal Hapi + React + Webpack + HMR (hot module reloading) Sandbox",
  "keywords": [
    "hapi",
    "react",
    "webpack",
    "HMR",
    "boilerplate",
    "sandbox"
  ],
  "license": "MIT",
  "author": "Nikita Gazarov <nikita@raquo.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/raquo/minimal-hapi-react-webpack"
  },
  "main": "src/server.js",
  "scripts": {
    "start": "NODE_ENV=production     node --harmony src/server.js",
    "build": "NODE_ENV=production     node --harmony src/scripts/make.js  &&  NODE_ENV=production   webpack -p --config src/config/webpack-config.js",
    "webpack": "NODE_ENV=development  node --harmony src/scripts/make.js  &&  NODE_ENV=development  node --harmony src/webpackDevServer.js",
    "dev": "NODE_ENV=development      node --harmony src/scripts/make.js  &&  NODE_ENV=development  nodemon --harmony src/server.js",
    "make": "NODE_ENV=development     node --harmony src/scripts/make.js",
    "lint": "eslint . --ext .js --ext .jsx"
  },
  "dependencies": {
    "assets-webpack-plugin": "^2.2.3",
    "babel-plugin-react-transform": "^1.1.1",
    "bcrypt": "^0.8.5",
    "chalk": "^1.1.1",
    "deep-extend": "^0.4.0",
    "es6-promise": "^3.0.2",
    "eventemitter3": "^1.1.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "google-maps-api": "^2.0.1",
    "hapi": "^10.1.0",
    "hapi-auth-cookie": "^3.1.0",
    "hapi-react-views": "^3.1.3",
    "history": "^1.11.1",
    "inert": "^3.0.1",
    "lodash": "^3.10.1",
    "mysql": "^2.9.0",
    "nodemailer": "^1.10.0",
    "react": "^0.13.3",
    "react-router": "^1.0.0-rc1",
    "react-transform-hmr": "^1.0.1",
    "rimraf": "^2.4.3",
    "sequelize": "^3.12.0",
    "vision": "^3.0.0",
    "webpack-dev-middleware": "^1.2.0",
    "webpack-hot-middleware": "^2.3.0"
  },
  "devDependencies": {
    "babel-core": "^5.8.22",
    "babel-eslint": "^4.0.7",
    "babel-loader": "^5.3.2",
    "css-loader": "^0.19.0",
    "eslint": "^1.1.0",
    "eslint-loader": "^1.0.0",
    "eslint-plugin-react": "^3.2.2",
    "express": "^4.13.3",
    "h2o2": "^4.0.1",
    "less": "^2.5.3",
    "less-loader": "^2.2.2",
    "react-hot-loader": "^1.2.8",
    "style-loader": "^0.12.3",
    "webpack": "^1.11.0",
    "webpack-merge": "^0.2.0"
  }
}
